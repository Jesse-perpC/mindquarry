			class="com.mindquarry.persistence.jcr.ClientRepository">
		</jcr-repository>
		
		<jcr-initializer
			class="com.mindquarry.jcr.jackrabbit.JackrabbitInitializer">

			<credentials login="alexander.saar" password="mypwd" />
		</jcr-initializer>

