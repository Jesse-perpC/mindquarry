<?xml version="1.0" encoding="UTF-8"?>
<html xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
	xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
	xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">

	<!-- Import the macros that define CForms template elements -->
	<jx:import
		uri="resource://org/apache/cocoon/forms/generation/jx-macros.xml" />
	<head>
		<title>Job Board Posting</title>
	</head>
	<body>
		<!-- ajax="true" does not work due to the dojo editor -->
		<ft:form-template action="#{$cocoon/continuation/id}.continue"
			method="POST">
			<div>
				<label for="title:input">
					<ft:widget-label id="title" />
				</label>
				<ft:widget id="title" />
			</div>
			<div>
				<label for="description:input">
					<ft:widget-label id="description" />
				</label>
				<div>
				<ft:widget id="description">
					<fi:styling type="dojoarea" dojo="textGroup;blockGroup;justifyGroup;commandGroup;colorGroup;listGroup;indentGroup;linkGroup" cols="50" rows="50"/>
				</ft:widget>
				</div>
			</div>
			
			<ft:widget id="postjob" />

		</ft:form-template>
		<ul>
			<li><a href="./">back</a> to the list of jobs</li>
		</ul>
	</body>
</html>
