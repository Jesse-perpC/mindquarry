		<dependency>
			<groupId>com.mindquarry.search</groupId>
			<artifactId>mindquarry-solr</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>com.mindquarry.search</groupId>
			<artifactId>mindquarry-solr-block</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>com.mindquarry.search</groupId>
			<artifactId>mindquarry-search-block</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>

		<dependency>
