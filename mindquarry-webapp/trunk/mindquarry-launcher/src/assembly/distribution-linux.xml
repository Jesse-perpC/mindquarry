<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>linux_x86_32</id>
    
    <formats>
        <format>tar.gz</format>
        <!--
        <format>tar.gz</format>
        <format>tar.bz2</format>
        -->
    </formats>
    
    <fileSets>
        <fileSet>
            <directory>src/assembly/logs</directory>
            <outputDirectory>/logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/assembly/data</directory>
            <outputDirectory>/data</outputDirectory>
        </fileSet>
    </fileSets>
    
    <files>
        <file>
            <source>src/assembly/txt/README.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/assembly/txt/LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/assembly/scripts/run.bat</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/assembly/scripts/run.sh</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/assembly/properties/mindquarry-webapplication.properties</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/assembly/etc/webdefault.xml</source>
            <outputDirectory>/etc</outputDirectory>
        </file>
        <file>
            <source>src/assembly/etc/mindquarry-web.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
          <source>src/assembly/bin/wrapper-linux_x86_32</source>
          <outputDirectory>/bin</outputDirectory>
          <destName>mindquarry</destName>
          <fileMode>755</fileMode>
        </file>
    </files>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>org.mortbay.jetty:jetty</include>
                <include>org.mortbay.jetty:jetty-util</include>
                <include>org.mortbay.jetty:jsp-2.1</include>
                <include>org.mortbay.jetty:jsp-api-2.1</include>
                <include>org.mortbay.jetty:servlet-api-2.5</include>
                <include>com.mindquarry.launcher:mindquarry-launcher</include>
                <include>tanukisoft:wrapper</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/webapps</outputDirectory>
            <includes>
                <include>com.mindquarry.webapp:mindquarry-webapplication</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
