<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.mindquarry</groupId>
		<artifactId>mindquarry</artifactId>
		<version>1</version>
	</parent>

	<groupId>com.mindquarry</groupId>
	<artifactId>mindquarry-webapp</artifactId>
	<name>mindquarry-webapp</name>
	<version>0.0.1-SNAPSHOT</version>
	<build>
		<finalName>mindquarry</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.cocoon</groupId>
				<artifactId>cocoon-deployer-plugin</artifactId>
				<version>1.0.0-M2-SNAPSHOT</version>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.0.0rc2</version>
				<configuration>
					<connectors>
						<connector
							implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8888</port>
							<maxIdleTime>30000</maxIdleTime>
						</connector>
					</connectors>
					<webAppSourceDirectory>
						target/mindquarry
					</webAppSourceDirectory>
					<classesDirectory>${basedir}/src/main/resources</classesDirectory>
					<contextPath>/</contextPath>
					<scanIntervalSeconds>1</scanIntervalSeconds>
					<scanTargets>
			            <scanTarget>${basedir}/src/main/resources/COB-INF/sitemap.xmap</scanTarget>
			            <scanTarget>${basedir}/src/main/resources/META-INF/</scanTarget>
					</scanTargets>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.cocoon</groupId>
			<artifactId>cocoon-core</artifactId>
			<version>2.2.0-M2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cocoon</groupId>
			<artifactId>cocoon-template-impl</artifactId>
			<version>1.0.0-M2-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>com.mindquarry.workspace</groupId>
			<artifactId>mindquarry-workspace-block</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>com.mindquarry</groupId>
			<artifactId>ductforms-example</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>com.mindquarry.teamspace</groupId>
			<artifactId>mindquarry-teamspace-block</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>


	<repositories>
		<repository>
			<id>mindquarry.releases</id>
			<name>Mindquarry Repository</name>
			<url>http://www.mindquarry.com/releases/</url>
			<layout>default</layout>
		</repository>
	</repositories>

	<scm>
		<connection>
			scm:svn:https://secure.mindquarry.com/repos/mindquarry-webapp/trunk/
		</connection>
		<url>
			https://secure.mindquarry.com/blocks/workspace-block/browser/mindquarry-webapp/trunk/
		</url>
		<developerConnection>
			scm:svn:https://secure.mindquarry.com/repos/mindquarry-webapp/trunk/
		</developerConnection>
	</scm>	
</project>
