<df:datatype id="priority" required="false" position="1"
	xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
	xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
	xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
	xmlns:df="http://mindquarry.com/ns/xml/ductforms">
	<fd:field>
		<fd:datatype base="string" />
		<fd:label>Priority</fd:label>
		<fd:hint>According to the task due date set the level of urgency to either low, medium, important or critical. </fd:hint>
		<fd:help>Set the level of urgency for the completion of a task.</fd:help>
		<fd:initial-value>new</fd:initial-value>
		<fd:selection-list>
			<fd:item value="low">
				<fd:label>Low</fd:label>
			</fd:item>
			<fd:item value="medium">
				<fd:label>Medium</fd:label>
			</fd:item>
			<fd:item value="important">
				<fd:label>Important</fd:label>
			</fd:item>
			<fd:item value="critical">
				<fd:label>Critical</fd:label>
			</fd:item>
		</fd:selection-list>
	</fd:field>
	<ft:widget>
		<fi:styling list-type="buttons" autoactive="true" />
	</ft:widget>
</df:datatype>
