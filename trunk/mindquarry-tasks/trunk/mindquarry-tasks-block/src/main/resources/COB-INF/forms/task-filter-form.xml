<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition">
	<fd:widgets>
		<!-- output field for displaying the name of a filter -->
		<fd:output id="filterName">
			<fd:datatype base="string"/>
			<fd:initial-value>Create Filter</fd:initial-value>
		</fd:output>
		
		<fd:group id="filterBuilderWidgets">
			<fd:widgets>
				<!-- filter aggregator field -->
				<fd:field id="aggregator">
					<!-- basic configuration -->
					<fd:label>Aggregator</fd:label>
					<fd:datatype base="string" />
		
					<!-- selectable values -->
					<fd:selection-list>
						<fd:item value="and" />
						<fd:item value="or" />
					</fd:selection-list>
		
					<!-- helper information -->
					<fd:hint>
						The aggregator is used for assembling the filter.
					</fd:hint>
					<fd:help>
						Can be used for building different link types between filter parts.
					</fd:help>
				</fd:field>
						
				<!-- filter part repeater -->
				<fd:repeater id="rules">
					<fd:label>Filter Rules</fd:label>
		
					<!-- filter part widgets -->
					<fd:widgets>
						<!-- field name configuration -->
						<fd:field id="field">
							<!-- basic configuration -->
							<fd:label>Field Name</fd:label>
							<fd:datatype base="string" />
		
							<!-- selectable values -->
							<fd:selection-list>
								<fd:item value="Title" />
								<fd:item value="Summary" />
								<fd:item value="Status" />
								<fd:item value="Date" />
								<fd:item value="Description" />
								<fd:item value="People" />
							</fd:selection-list>
		
							<!-- helper information -->
							<fd:hint>
								Name of the field that should be evaluated.
							</fd:hint>
							<fd:help>
								Can be used for selecting a field that is used in a filter.
							</fd:help>
						</fd:field>
		
						<!-- selector configuration -->
						<fd:field id="selector">
							<!-- basic configuration -->
							<fd:label>Selector</fd:label>
							<fd:datatype base="string" />
		
							<!-- selectable values -->
							<fd:selection-list>
								<fd:item value="equals" />
								<fd:item value="contains" />
							</fd:selection-list>
		
							<!-- helper information -->
							<fd:hint>
								Selector is used for evaluating the specified field.
							</fd:hint>
							<fd:help>
								Can be used for specifing selection criteria.
							</fd:help>
						</fd:field>
		
						<!-- value configuration -->
						<fd:field id="value" required="true">
							<!-- basic configuration -->
							<fd:label>Value</fd:label>
							<fd:datatype base="string" />
							<fd:validation>
								<fd:length min="1">
									<fd:failmessage>
										Value field must contain at least one ore more characters.
									</fd:failmessage>
								</fd:length>
							</fd:validation>
		
							<!-- helper information -->
							<fd:hint>
								The value that is used in the field evaluation according to the specified selection criteria.
							</fd:hint>
							<fd:help>
								Can be used for specifing values to be used in the selection criteria.
							</fd:help>
						</fd:field>
						
						<fd:row-action id="delete" command="delete">
							<fd:label>Remove Rule</fd:label>
						</fd:row-action>
					</fd:widgets>
		
					<!-- helper information -->
					<fd:hint>Rules of a filter.</fd:hint>
					<fd:help>
						Use this field for configuring the rules of a filter.
					</fd:help>
				</fd:repeater>
				
				<!-- add field to filter action -->
				<fd:repeater-action repeater="rules" id="addRule"
					command="add-row">
					<fd:label>Add Rule</fd:label>
				</fd:repeater-action>
				
				<!-- filter title field -->
				<fd:field id="title" required="true">
					<fd:label>Filter Name</fd:label>
					<fd:datatype base="string" />
					<fd:validation>
						<fd:length min="1">
							<fd:failmessage>
								Title field must contain at least one ore more characters.
							</fd:failmessage>
						</fd:length>
					</fd:validation>
					
					<fd:hint>
						Name of the filter.
					</fd:hint>
					<fd:help>
						Can be used for setting the name of a stored filter.
					</fd:help>
				</fd:field>
			</fd:widgets>
		</fd:group>

		<!-- execute filter action -->
		<fd:action id="executeFilterAction">
			<fd:label>Execute Filter</fd:label>
			<fd:on-action>
				<fd:javascript>executeFilter();</fd:javascript>
			</fd:on-action>
		</fd:action>
				
		<!-- save filter widgets -->
		<fd:group id="saveFilterWidgets">
			<fd:widgets>
				<fd:submit id="saveFilterAction">
					<fd:label>Save Filter</fd:label>
				</fd:submit>
			</fd:widgets>
		</fd:group>
		
		<!-- delete filter widgets -->
		<fd:group id="deleteFilterWidgets">
			<fd:widgets>
				<fd:submit id="deleteFilterAction" >
					<fd:label>Delete Filter</fd:label>
				</fd:submit>
			</fd:widgets>
		</fd:group>
		
		<!-- repeater for displaying filter results -->
		<fd:repeater id="results" state="output">
			<!-- filter part widgets -->
			<fd:widgets>
				<fd:field id="link" required="true" state="output">
					<fd:datatype base="string" />
				</fd:field>
				<fd:field id="title" required="true" state="output">
					<fd:datatype base="string" />
				</fd:field>
				<fd:field id="status" required="true" state="output">
					<fd:datatype base="string" />
				</fd:field>
				<fd:field id="date" required="true" state="output">
					<fd:datatype base="string" />
				</fd:field>
				<fd:field id="summary" required="true" state="output">
					<fd:datatype base="string" />
				</fd:field>
			</fd:widgets>
			
			<!-- helper information -->
			<fd:hint>Results of the filter execution.</fd:hint>
			<fd:help>
				Use this field for configuring the filter parts.
			</fd:help>
		</fd:repeater>
	</fd:widgets>
</fd:form>
