<df:datatype id="summary" required="false" position="2"
	xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
	xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
	xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
	xmlns:df="http://mindquarry.com/ns/xml/ductforms">
	<fd:field>
		<fd:datatype base="string" />
		<fd:label>Summary</fd:label>
		<fd:help>The summary should be a comprehensive, brief abstract covering the main points of the content.
				Therefore, keep it brief, concise and to the point.
		</fd:help>
	</fd:field>

	<ft:widget>
		<fi:styling type="textarea" cols="50" rows="3" autoactive="true" class="summary-in-div"/>
	</ft:widget>
</df:datatype>