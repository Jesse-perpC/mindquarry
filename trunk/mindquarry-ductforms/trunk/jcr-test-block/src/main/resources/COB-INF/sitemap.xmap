<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:flow language="javascript">
    <map:script src="demo.js"/>
  </map:flow>

  <map:pipelines>
    <map:pipeline>
      <map:match pattern="">

        <map:generate src="populate.xml"/>
        <map:transform type="cinclude"/>
        <map:transform type="write-source"/>
        <map:serialize/>

      </map:match>
  
      <map:match pattern="content.xml">
        <map:generate src="jcr://xpath!//cocoon/sitemap"/>
        <!-- map:generate src="jcr://xpath!/jcr:root/cocoon/sitemap"/ -->
        <!-- map:generate src="jcr://sql!select * from nt:base where jcr:path = '/cocoon/sitemap'"/-->
        <map:serialize type="xml" />
      </map:match>
      
    </map:pipeline>
  </map:pipelines>

</map:sitemap>

