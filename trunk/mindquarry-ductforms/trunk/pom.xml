<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<name>Mindquarry Cocoon Playground</name>
	<url>http://www.mindquarry.com</url>
	<description>
		Playground project for Cocoon 2.2 components and extensions.
	</description>

	<groupId>com.mindquarry.cocoon</groupId>
	<artifactId>cocoon-playground</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	
	<modules>
		<!--module>subversion-block</module-->
		<module>ductforms-example</module>
    </modules>

	<build>
		<finalName>cocoon-playground</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.cocoon</groupId>
				<artifactId>cocoon-deployer-plugin</artifactId>
				<version>1.0.0-M2-SNAPSHOT</version>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.0.0rc2</version>
				<configuration>
					<connectors>
						<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8888</port>
							<maxIdleTime>30000</maxIdleTime>
						</connector>
					</connectors>
					<scanIntervalSeconds>10</scanIntervalSeconds>
					<webAppSourceDirectory>
						target/cocoon-playground-webapp
					</webAppSourceDirectory>
					<contextPath>/</contextPath>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<configuration>
					<outputEncoding>UTF-8</outputEncoding>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>goshaky</id>
			<name>Goshaky Public Repository</name>
			<url>http://www.goshaky.com/m2</url>
			<layout>default</layout>
		</repository>
		<!--repository>
			<id>mindquarry-repo</id>
			<name>Mindquarry Repository</name>
			<url>sftp://mindquarry.com/var/www/www.mindquarry.com/htdocs/m2</url>
			<layout>default</layout>
		</repository-->
	</repositories>

	<mailingLists>
		<mailingList>
			<name>Mindquarry Developer Mailinglist</name>
			<post>dev@mindquarry.com</post>
		</mailingList>
	</mailingLists>

	<developers>
		<developer>
			<id>alexs</id>
			<name>Alexander Saar</name>
			<email>alexs@mindquarry.com</email>
			<organization>Mindquarry GmbH</organization>
			<organizationUrl>http://www.mindquarry.com</organizationUrl>
		</developer>
	</developers>

	<ciManagement>
		<system>continuum</system>
		<notifiers>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>builds@mindquarry.com</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>

	<scm>
		<connection>
			scm:svn:https://www.goshaky.com/svn/mindquarry/trunk/SoftwareDevelopment/Prototypes/cocoon-playground/
		</connection>
		<url>
			https://www.goshaky.com/svn/mindquarry/trunk/SoftwareDevelopment/Prototypes/cocoon-playground/
		</url>
		<developerConnection>
			scm:svn:https://www.goshaky.com/svn/mindquarry/trunk/SoftwareDevelopment/Prototypes/cocoon-playground/
		</developerConnection>
	</scm>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>
					maven-project-info-reports-plugin
				</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>dependencies</report>
							<report>project-team</report>
							<report>mailing-list</report>
							<report>cim</report>
							<report>issue-tracking</report>
							<report>license</report>
							<report>scm</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<repository>
			<id>mindquarry</id>
			<name>Mindquarry Repository</name>
			<url>
				scp://mindquarry.com/var/www/www.mindquarry.com/htdocs/m2
			</url>
		</repository>
	</distributionManagement>
</project>
