<df:datatype id="status" required="false"
	xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
	xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
	xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
	xmlns:df="http://mindquarry.com/ns/xml/ductforms">
	<fd:field>
		<fd:datatype base="string" />
		<fd:label>Status</fd:label>
		<fd:hint>Status of this document or issue</fd:hint>
		<fd:help>
			Useful for tracking issues or status of documents
		</fd:help>
		<fd:selection-list>
			<fd:item value="stop" />
			<fd:item value="start" />
			<fd:item value="pause" />
			<fd:item value="done" />
		</fd:selection-list>
	</fd:field>
	<ft:widget />
</df:datatype>
