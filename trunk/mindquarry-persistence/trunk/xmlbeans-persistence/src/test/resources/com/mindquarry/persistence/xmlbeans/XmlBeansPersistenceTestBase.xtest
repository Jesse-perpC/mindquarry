			<credentials login="alexander.saar" password="mypwd" />
		</role>

		<role name="com.mindquarry.common.persistence.SessionFactory"
			default-class="com.mindquarry.persistence.xmlbeans.XmlBeansSessionFactoryCocoon" />
			
		<role name="com.mindquarry.persistence.xmlbeans.config.PersistenceConfiguration"
			default-class="com.mindquarry.persistence.xmlbeans.config.PersistenceConfiguration" />
			
		<role name="com.mindquarry.common.xml.EntityXmlizerFactory"
			default-class="com.mindquarry.persistence.xmlbeans.xml.XmlBeansEntityXmlizerFactory" />
	</roles>

	<components>
		<source-factories>
			<component-instance name="resource"
				class="org.apache.excalibur.source.impl.ResourceSourceFactory" />

			<component-instance name="file"
