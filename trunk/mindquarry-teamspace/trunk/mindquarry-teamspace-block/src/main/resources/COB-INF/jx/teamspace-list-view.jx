<jx:template xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
	<teamspaces>
		<user id="${userId.id}">
			<jx:out value="${userId.name}" />
			<jx:out value="${userId.surname}" />
		</user>
		<jx:forEach var="teamspace" items="${teamspaces}">
			<teamspace>
				<id>
					<jx:out value="${teamspace.id}" />
				</id>
				<name>
					<jx:out value="${teamspace.name}" />
				</name>
				<description>
					<jx:out value="${teamspace.description}" />
				</description>
				<users>
					<jx:forEach var="user"
							items="${teamspace.users}">
						<user>
							<id><jx:out value="${user.id}" /></id>
							<name>
								<jx:out value="${user.name}" />
							</name>
							<surname>
								<jx:out value="${user.surname}" />
							</surname>
							<skills>
								<jx:out value="${user.skills}" />
							</skills>
						</user>
					</jx:forEach>
				</users>
			</teamspace>
		</jx:forEach>
	</teamspaces>
</jx:template>
