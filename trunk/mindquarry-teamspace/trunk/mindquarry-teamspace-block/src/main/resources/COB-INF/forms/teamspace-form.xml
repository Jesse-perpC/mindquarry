<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition">
	<fd:widgets>
		<fd:field id="teamspaceId" required="true">
			<fd:label>Teamspace ID</fd:label>
			<fd:datatype base="string"></fd:datatype>
			<fd:validation>
				<fd:regexp pattern="[a-z\-]{3,}">
					<fd:failmessage>
						Teamspace ID should be in lower case and must contain at least 3 characters. 
					</fd:failmessage>
				</fd:regexp>
				<fd:javascript>
					return existsTeamspaceWithId(widget);
				</fd:javascript>
			</fd:validation>
		</fd:field>
		<fd:field id="name" required="true">
			<fd:label>Teamspace Name</fd:label>
			<fd:datatype base="string"></fd:datatype>
			<fd:validation>
				<fd:regexp pattern="[\w\s]+">
					<fd:failmessage>
						Full name should contain at least 1 character. 
					</fd:failmessage>
				</fd:regexp>
			</fd:validation>
		</fd:field>
		<fd:field id="description">
			<fd:label>Description</fd:label>
			<fd:datatype base="string"></fd:datatype>
		</fd:field>

		<fd:submit id="create" command="submit" validate="true">
			<fd:label>Create</fd:label>
		</fd:submit>
		<fd:submit id="update" command="submit" validate="true">
			<fd:label>Save</fd:label>
		</fd:submit>
		<fd:submit id="cancel" command="cancel" validate="false">
			<fd:label>Cancel</fd:label>
		</fd:submit>
	</fd:widgets>
</fd:form>