<html xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
xmlns:jx="http://apache.org/cocoon/templates/jx/1.0"
	xmlns:fi="http://apache.org/cocoon/forms/1.0#instance">
	<jx:import
		uri="resource://org/apache/cocoon/forms/generation/jx-macros.xml" />
	<head>
		<title>Teamspace <ft:widget id="teamspaceName" /></title>
	</head>
	<body>
		<h3>Edit Team Members</h3>
		<ft:form-template action="#{$cocoon/continuation/id}.continue"
			method="POST">
			
			<div>		
				<p><ft:widget id="teamspaceName" /></p>
				<a href="${cocoon.continuation.id}.continue">add or remove test link</a>
			</div>

			<div>
				<h3><ft:widget-label id="members" /></h3>
				<ft:repeater id="members">
					<ul>
						<ft:repeater-rows>
							<li class="member-list">
								<fi:styling type="member-entry" />
								<ft:widget id="userId">
									<fi:styling type="user-image" />
								</ft:widget>
								<ft:widget id="name" />
								<ft:widget id="removeMember" />
							</li>
						</ft:repeater-rows>
					</ul>
				</ft:repeater>
			</div>
			
			<div>
				<h3><ft:widget-label id="nonMembers" /></h3>
				<ft:repeater id="nonMembers">
					<ul>
						<ft:repeater-rows>
							<li class="member-list">
								<fi:styling type="member-entry" />
								<ft:widget id="userId">
									<fi:styling type="user-image" />
								</ft:widget>
								<ft:widget id="name" />
								<ft:widget id="addMember" />
							</li>
						</ft:repeater-rows>
					</ul>
				</ft:repeater>
			</div>
			
			<ft:widget id="ok" /><ft:widget id="cancel" />
		</ft:form-template>
	</body>
</html>