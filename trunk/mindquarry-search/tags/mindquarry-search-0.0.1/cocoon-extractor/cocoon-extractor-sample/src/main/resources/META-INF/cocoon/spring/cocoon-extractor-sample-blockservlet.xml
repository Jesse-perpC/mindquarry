<!--
	Configuration for dforms-block that concrete implementations can inherit from.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
	<bean id="com.mindquarry.search.cocoon.block" class="org.apache.cocoon.blocks.BlockServlet">
		<property name="mountPath" value="/cocoon-extractor-sample"/>
		
		<property name="servletClass" value="org.apache.cocoon.sitemap.SitemapServlet"/>
		
		<property name="blockContextURL" value="blockcontext:/cocoon-extractor-sample/"/>
	</bean>
</beans>