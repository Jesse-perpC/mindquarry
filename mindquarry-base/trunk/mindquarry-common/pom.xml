<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<packaging>jar</packaging>

	<name>Mindquarry Common</name>
	<url>http://www.mindquarry.com</url>
	<description>Mindquarry Common</description>

	<groupId>com.mindquarry.common</groupId>
	<artifactId>mindquarry-common</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<dependencies>
		<dependency>
			<groupId>
				org.apache.excalibur.components.sourceresolve
			</groupId>
			<artifactId>excalibur-sourceresolve</artifactId>
			<version>2.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<configuration>
					<outputEncoding>UTF-8</outputEncoding>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>ibiblio</id>
			<name>ibiblio</name>
			<url>http://www.ibiblio.com/maven2</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>goshaky</id>
			<name>Goshaky Public Repository</name>
			<url>http://www.goshaky.com/m2</url>
			<layout>default</layout>
		</repository>
	</repositories>

	<mailingLists>
		<mailingList>
			<name>Mindquarry Developer Mailinglist</name>
			<post>dev@mindquarry.com</post>
		</mailingList>
	</mailingLists>

	<developers>
		<developer>
			<id>bastian</id>
			<name>Bastian Steinert</name>
			<email>bastian.steinert@mindquarry.com</email>
			<organization>Mindquarry GmbH</organization>
			<organizationUrl>http://www.mindquarry.com</organizationUrl>
		</developer>
	</developers>

	<ciManagement>
		<system>continuum</system>
		<notifiers>
			<notifier>
				<type>mail</type>
				<configuration>
					<address>builds@mindquarry.com</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>

	<scm>
		<connection>
			scm:svn:https://www.goshaky.com/svn/mindquarry/trunk/SoftwareDevelopment/Prototypes/cocoon-playground/
		</connection>
		<url>
			https://www.goshaky.com/svn/mindquarry/trunk/SoftwareDevelopment/Prototypes/cocoon-playground/
		</url>
		<developerConnection>
			scm:svn:https://www.goshaky.com/svn/mindquarry/trunk/SoftwareDevelopment/Prototypes/cocoon-playground/
		</developerConnection>
	</scm>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>
					maven-project-info-reports-plugin
				</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>dependencies</report>
							<report>project-team</report>
							<report>mailing-list</report>
							<report>cim</report>
							<report>issue-tracking</report>
							<report>license</report>
							<report>scm</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<repository>
			<id>mindquarry</id>
			<name>Mindquarry Repository</name>
			<url>
				scp://mindquarry.com/var/www/www.mindquarry.com/htdocs/m2
			</url>
		</repository>
	</distributionManagement>
</project>
