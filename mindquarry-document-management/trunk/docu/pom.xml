<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<groupId>com.mindquarry.document-management</groupId>
		<artifactId>mindquarry-document-management</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<name>Mindquarry Document Management Documentation</name>
	<groupId>com.mindquarry.document-management.documentation</groupId>
	<artifactId>mindquarry-document-management-documentation</artifactId>

	<description>
	             Documentation of the Mindquarry Document Management system.
	</description>

	<build>
	       <plugins>
	                <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagBase>https://www.mindquarry.org/repos/mindquarry-document-management/tags/mindquarry-document-management-documentation/</tagBase>
				</configuration>
			</plugin>
			
                        <!-- this plugin configures the mvn docbook:transform goal -->
			<plugin>
			        <groupId>org.codehaus.mojo</groupId>
			        <artifactId>docbook-maven-plugin</artifactId>

			        <!-- we need a mindquarry-specific fork until our patches are applied -->
			        <version>1.0.0-alpha-3-Mindquarry</version>

			        <configuration>
           			        <!-- we can configure the plugin to use our own customization layer -->
	              		        <customizations>
		                	        <pdf>resource://com/mindquarry/docbook/mindquarry-fo.xsl</pdf>
			                 </customizations>

                    		        <!-- and can restrict the number of output formats (xhtml also possible) -->
		              	        <outputFormats>
                                                <param>pdf</param>
                                        </outputFormats>
			        </configuration>

			        <dependencies>
			                      <!-- in order to use our customization layer, we need to add this dependency to the plugin -->
                                              <dependency>
			                                  <groupId>com.mindquarry.docbook</groupId>
			                                  <artifactId>mindquarry-docbook-xsl-stylesheets</artifactId>
			                                  <version>0.5</version>
                                              </dependency>
			        </dependencies>
		        </plugin>
	       </plugins>
	</build>

	<scm>
		<connection>scm:svn:https://www.mindquarry.org/repos/mindquarry-document-management/trunk/mindquarry-document-management-documentation/</connection>
		<url>https://www.mindquarry.org/repos/mindquarry-document-management/trunk/mindquarry-document-management-documentation/</url>
		<developerConnection>scm:svn:https://www.mindquarry.org/repos/mindquarry-document-management/trunk/mindquarry-document-management-documentation/</developerConnection>
	</scm>
</project>
