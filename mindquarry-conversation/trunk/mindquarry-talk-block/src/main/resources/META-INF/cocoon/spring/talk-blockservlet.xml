<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
       
	<bean id="com.mindquarry.conversation.talk-block" 
		  class="org.apache.cocoon.blocks.BlockServlet">
		  
		<property name="mountPath" value="/talk"/>
		
		<!-- use the sitemap in COB-INF for the implementation of this servlet -->
		<property name="servletClass" value="org.apache.cocoon.sitemap.SitemapServlet"/>
		
		<property name="blockContextURL" value="blockcontext:/mindquarry-talk-block/"/>

		<property name="connections">
			<map>
				<entry key="super"
					value-ref="com.mindquarry.webapp.resources-block" />
				<entry key="teams"
					value-ref="com.mindquarry.teamspace.teamspace-block" />
        		<entry key="help"
					value-ref="com.mindquarry.webapp.help-block" />
				<entry key="resources"
					value-ref="com.mindquarry.webapp.resources-block" />
			</map>
		</property>
	</bean>
</beans>