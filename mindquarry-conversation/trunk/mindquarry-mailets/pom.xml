<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<artifactId>mindquarry-conversation</artifactId>
		<groupId>com.mindquarry.conversation</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>mindquarry-mailets</artifactId>
	<name>Mindquarry Conversation Mailets</name>
	<description>Project containing Mindquarry mailets.</description>
	
	<scm>
		<connection>
			scm:svn:https://secure.mindquarry.com/repos/mindquarry-conversation/trunk/mindquarry-mailets
		</connection>
		<developerConnection>
			scm:svn:https://secure.mindquarry.com/repos/mindquarry-conversation/trunk/mindquarry-mailets
		</developerConnection>
		<url>
			https://secure.mindquarry.com/repos/mindquarry-conversation/trunk/mindquarry-mailets
		</url>
	</scm>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/*Test.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>james</groupId>
			<artifactId>mailet-api</artifactId>
			<version>3.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>james</groupId>
			<artifactId>mailet</artifactId>
			<version>3.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.jackrabbit</groupId>
			<artifactId>jackrabbit-core</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.jackrabbit</groupId>
			<artifactId>jackrabbit-jcr-rmi</artifactId>
			<version>1.0.1</version>
		</dependency>
	</dependencies>
</project>