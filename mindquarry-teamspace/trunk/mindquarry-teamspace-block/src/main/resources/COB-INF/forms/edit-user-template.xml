<html xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
	xmlns:jx="http://apache.org/cocoon/templates/jx/1.0"
	xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
	xmlns:us="http://www.mindquarry.com/ns/schema/webapp">
	<jx:import
		uri="resource://org/apache/cocoon/forms/generation/jx-macros.xml" />

	<head>
		<title>Edit User Profile</title>
	</head>
	<body>
		<div>
			<ft:form-template
				action="/teamspace/#{$cocoon/continuation/id}.continue"
				ajax-action="/teamspace/#{$cocoon/continuation/id}.continue" ajax="true"
				method="POST" enctype="multipart/form-data"
				id="edit-user-form">

				<div id="editUserModel">
					<h1>Edit User Profile for <ft:widget id="fullName" /></h1>
					
					<table style="width:95%;margin-left:auto;margin-right:auto;" id="edit-user-settings-table">
						<tr>
							<td style="padding-right:10px" valign="top">
								<ft:group id="profile">
									<h3>Personal Information</h3>
									
									<table width="100%">
										<tr>
											<td class="label">
												<ft:widget-label id="name"/>
											</td>
											<td>
												<ft:widget id="name" />
											</td>
										</tr>
										<tr>
											<td class="label">
												<ft:widget-label id="surname"/>
											</td>
											<td>
												<ft:widget id="surname" />
											</td>
										</tr>
										<tr>
											<td class="label">
												<ft:widget-label id="email"/>
											</td>
											<td>
												<ft:widget id="email" />
											</td>
										</tr>
										<tr>
											<td class="label">
												<ft:widget-label id="skills"/>
											</td>
											<td>
												<ft:widget id="skills">
													<fi:styling type="textarea"/>													
												</ft:widget>
											</td>
										</tr>
										<tr>
											<td></td>
											<td>
												<ft:widget id="updateProfile" />
											</td>
										</tr>
									</table>
								</ft:group>
							</td>
							
							<td valign="top">
								<ft:group id="changePassword">
									<h3>Change Password</h3>
									
									<div>
										<ft:widget id="pwdChangeMessage">
											<ft:styling type="pwdChangeMessage"></ft:styling>
										</ft:widget>
									</div>
									
									<table width="100%">
										<tr>
											<td class="label">
												<ft:widget-label
													id="currentPassword" />
											</td>
											<td>
												<ft:widget id="currentPassword">
													<fi:styling type="password"></fi:styling>
												</ft:widget>
											</td>
										</tr>
										<tr>
											<td class="label">
												<ft:widget-label id="newPassword" />
											</td>
											<td>
												<ft:widget id="newPassword">
													<fi:styling type="password" />
												</ft:widget>
											</td>
										</tr>
										<tr>
											<td class="label">
												<ft:widget-label id="newPasswordRepeat" />
											</td>
											<td>
												<ft:widget id="newPasswordRepeat">
													<fi:styling type="password" />
												</ft:widget>
											</td>
										</tr>
										<tr>
											<td>
												
											</td>
											<td>
												<ft:widget id="changePassword" />
											</td>
										</tr>
									</table>
									
								</ft:group>								
							</td>
						</tr>
						<tr>
							<td colspan="2" align="center">
								<ft:group id="uploadPhoto">
									<h3>Upload new photo</h3>
									<table width="100%">
										<tr>
											<td class="label">
												<ft:widget-label id="photo" />
											</td>
											<td>
												<ft:widget id="photo" />
											</td>
											<td rowspan="2">
												<div hint="replaceWithUserPhoto" />
											</td>
										</tr>
										<tr>
											<td></td>
											<td>
												<ft:widget id="uploadPhoto" />												
											</td>
										</tr>
									</table>
									
								</ft:group>
							</td>
						</tr>
						<tr>
							<td colspan="2" style="padding-top:10px;text-align:center">
								<ft:widget id="close" />
							</td>
						</tr>
					</table>
					
				</div>
			</ft:form-template>
		</div>
	</body>
</html>