<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<packaging>jar</packaging>

	<parent>
		<groupId>com.mindquarry.teamspace</groupId>
		<artifactId>mindquarry-teamspace-web</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>com.mindquarry.teamspace</groupId>
	<artifactId>mindquarry-teamspace-block</artifactId>
	<name>Mindquarry Teamspace Block</name>
	<version>0.0.1-SNAPSHOT</version>
	<build>
		<finalName>mindquarry-teamspace-web</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.cocoon</groupId>
				<artifactId>cocoon-deployer-plugin</artifactId>
				<version>1.0.0-M2-SNAPSHOT</version>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.0.0rc2</version>
				<configuration>
					<connectors>
						<connector
							implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8888</port>
							<maxIdleTime>30000</maxIdleTime>
						</connector>
					</connectors>
					<webAppSourceDirectory>
						target/mindquarry-teamspace-web
					</webAppSourceDirectory>
					<contextPath>/</contextPath>
					<scanIntervalSeconds>10</scanIntervalSeconds>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<repositories>
		<repository>
			<id>apache.snapshot</id>
			<name>Apache Snapshot Repository</name>
			<url>http://svn.apache.org/maven-snapshot-repository</url>
		</repository>
	</repositories>
	
	<dependencies>
		<dependency>
			<groupId>com.mindquarry.teamspace</groupId>
			<artifactId>mindquarry-teamspace</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cocoon</groupId>
			<artifactId>cocoon-core</artifactId>
			<version>2.2.0-M2-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>org.apache.cocoon</groupId>
			<artifactId>cocoon-forms-impl</artifactId>
			<version>1.0.0-M2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cocoon</groupId>
			<artifactId>cocoon-template-impl</artifactId>
			<version>1.0.0-M2-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<scm>
		<connection>
			scm:svn:https://secure.mindquarry.com/repos/mindquarry-teamspace-web/trunk/mindquarry-teamspace-block/
		</connection>
		<url>
			https://secure.mindquarry.com/blocks/workspace-block/browser/mindquarry-teamspace-web/trunk/mindquarry-teamspace-block/
		</url>
		<developerConnection>
			scm:svn:https://secure.mindquarry.com/repos/mindquarry-teamspace-web/trunk/mindquarry-teamspace-block/
		</developerConnection>
	</scm>
</project>